<h1>Pending Quotes</h1>

<% @quotes.each do |quote| %>
<p>
  <% unless quote.author.empty? %>
  By <%= quote.author %><br />
  <% else %>
  By Unknown<br />
  <% end %>

  <em>&ldquo;<%= quote.quote %>&rdquo;</em>
</p>
<%= link_to "Approve", approve_quote_path(quote) %> |
<%= link_to "Delete", quote, :method => :delete, :confirm => "Are you sure?" %>
<% end %>