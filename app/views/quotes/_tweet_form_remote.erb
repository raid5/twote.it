<%= form_tag(tweet_path, :remote => true) do %>
  <%= hidden_field_tag 'quote', "\"#{@quote_random.quote}\" &mdash;#{@quote_random.author}" %>

  <div style="padding-right:5px; float:left;">
    <% if current_user %>
      <%= image_submit_tag('bt_twoteit.png') %>
    <% else %>
      <%= link_to "/auth/twitter" do %>
        <%= image_tag('bt_login.png', :border => 0) %>
      <% end %>
    <% end %>
  </div>
<% end %>