<!DOCTYPE html>
<html>

<head>
  <title>TwoteIt</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <script type="text/javascript">

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-3776385-12']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

  </script>
</head>
<body>
  <div id="sun"></div>
  <div id="clouds"></div>
  
  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}" %>
  <% end %>

  <%= yield %>
  
  <div id="footer">Created by<br><a style="text-decoration:underline; color:#fff;" href="http://twitter.com/davidhoang" target="_blank">David Hoang</a> + <a style="text-decoration:underline; color:#fff;" href="http://twitter.com/raid5" target="_blank">Adam McDonald</a></div>
  <div id="grass"></div>

</body>
</html>
