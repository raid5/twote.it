<!DOCTYPE html>
<html>
<head>
  <title>TwoteIt</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  
  <div id="sun"></div>
  <div id="clouds"></div>
  
  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}" %>
  <% end %>

  <%= yield %>
  
  <div id="footer">Created by<br>David Hoang + Adam McDonald</div>
  <div id="grass"></div>

</body>
</html>
